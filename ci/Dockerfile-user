ARG CONTAINER_IMAGE
FROM ${CONTAINER_IMAGE}
ARG USER_NAME
ARG USER_ID
ARG GROUP_NAME
ARG GROUP_ID

RUN groupadd -g "${GROUP_ID}" "${GROUP_NAME}"
RUN useradd -m -u "${USER_ID}" -g "${GROUP_NAME}" "${USER_NAME}"
RUN id "${USER_NAME}"
RUN mkdir /work
RUN chown -R "${USER_NAME}:${GROUP_NAME}" /work
VOLUME ["/work"]
